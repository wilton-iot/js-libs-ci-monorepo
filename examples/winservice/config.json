{
    "winservice": {
        "serviceName": "wilton_example_service",
        "displayName": "Wilton Example Service",
        "user": "Administrator",
        "password": "P@ssword",
        "startupModule": "winservice"
    },

    "wilton": {
        "defaultScriptEngine": "duktape",
        "applicationDirectory": "{{{appdir}}}",
        "requireJs": {
            "waitSeconds": 0,
            "enforceDefine": true,
            "nodeIdCompat": true,
            "baseUrl": "zip://{{{appdir}}}/js.zip",
            "paths": {
                "winservice": "file://{{{appdir}}}/examples/winservice"
            }
        }
    },

    "logging": {
        "appenders": [
            {
                "appenderType": "DAILY_ROLLING_FILE",
                "thresholdLevel": "DEBUG",
                "filePath": "{{{appdir}}}/log/winservice_log.txt"
            },
            {
                "appenderType": "CONSOLE",
                "thresholdLevel": "DEBUG"
            }
        ],
        "loggers": [
            {
                "name": "winservice",
                "level": "DEBUG"
            }, {
                "name": "wilton",
                "level": "WARN"
            }
        ]
    }
}
