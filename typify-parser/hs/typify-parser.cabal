name:                typify-parser
version:             0.0.1
synopsis:            Type signature parser for typify
description:         This package is used as an reference implementation for JavaScript version
homepage:            https://github.com/phadej/typify-parser
license:             MIT
license-file:        LICENSE
author:              Oleg Grenrus
maintainer:          oleg.grenrus@iki.fi
copyright:           2014 Â© Oleg Grenrus
category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Language.Typify
  build-depends:       base       >=4.7 && <4.9,
                       parsec     >=3.1 && <3.2,
                       aeson      >=0.8 && <0.10,
                       text       >=1.1 && <1.3,
                       containers >=0.5 && <0.6,
                       QuickCheck >=2.7 && <2.9
  hs-source-dirs:      src/
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests/
  main-is:             Tests.hs
  ghc-options:         -Wall
  build-depends:       base                >=4.5  && <5,
                       parsec              >=3.1  && <3.2,
                       tasty               >=0.10,
                       tasty-quickcheck    >=0.8,
                       typify-parser

executable generator
  default-language:    Haskell2010
  hs-source-dirs:      generator/
  main-is:             Main.hs
  ghc-options:         -Wall
  build-depends:       base          >=4.7  && <4.9,
                       parsec        >=3.1  && <3.2,
                       aeson         >=0.8  && <0.10,
                       text          >=1.2  && <1.3,
                       bytestring    >=0.10 && <0.11,
                       containers    >=0.5  && <0.6,
                       QuickCheck    >=2.7  && <2.9,
                       random        >=1.1  && <1.2,
                       typify-parser
